<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="elementosTesteLogado"
            type="com.example.bloqueador_telemarketing.ui.fragment.ListCallsFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.ListCallsFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvListaChamadas"
            android:layout_width="409dp"
            android:layout_height="0dp"
            android:background="?colorPrimaryVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btAddNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar NÃºmero"
            android:onClick="@{elementosTesteLogado::irAddBlackList}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvListaChamadas" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
